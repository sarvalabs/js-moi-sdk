{
  "compilerOptions": {
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "lib": ["ES6", "ESNext", "DOM"],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "outDir": "dist",
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true
  },
  "ts-node": {
    "esm": true
  },
  "references": [
    {
      "path": "./packages/js-moi-providers/tsconfig.cjs.json"
    },
    {
      "path": "./packages/js-moi-providers/tsconfig.esm.json"
    },
    {
      "path": "./packages/js-moi-utils/tsconfig.cjs.json"
    },
    {
      "path": "./packages/js-moi-utils/tsconfig.esm.json"
    },
    {
      "path": "./packages/js-moi-manifest/tsconfig.cjs.json"
    },
    {
      "path": "./packages/js-moi-manifest/tsconfig.esm.json"
    }
  ],
  "exclude": ["node_modules", "**/__tests__/**"]
}
