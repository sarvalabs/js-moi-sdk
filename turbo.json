{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "clean": {
            "cache": false
        },
        "clean:node_modules": {
            "cache": false
        },
        "check-types": {
            "cache": false
        },
        "build:esm": {
            "dependsOn": [
                "^build:esm"
            ],
            "cache": false
        },
        "build:cjs": {
            "dependsOn": [
                "^build:cjs"
            ],
            "cache": false
        },
        "watch": {
            "dependsOn": [
                "^watch"
            ],
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "clean",
                "build:cjs",
                "build:esm"
            ],
            "cache": true,
            "outputs": [
                "packages/*/lib.cjs",
                "packages/*/lib.esm"
            ]
        }
    }
}